<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaoniucr.xy.mapper.AlbumImageMapper">

    <!-- General query mapping results -->
    <resultMap id="BaseResultMap" type="com.xiaoniucr.xy.entity.AlbumImage">
        <result column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="album_id" property="albumId"/>
        <result column="album_image" property="albumImage"/>
    </resultMap>

    <!-- General query result column -->
    <sql id="Base_Column_List">
        id,
        create_time,
        update_time,
        album_id, album_image
    </sql>


    <select id="queryList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from xy_album_image
        <where>
            <if test='albumId != null and albumId != ""'>
                and album_id = #{albumId}
            </if>
        </where>
        order by create_time desc
        <if test="start != null and limit != null">
            limit #{start}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="java.lang.Integer">
        select count(*) from xy_album_image
        <where>
            <if test='albumId != null and albumId != ""'>
                and album_id = #{albumId}
            </if>
        </where>
    </select>

    <select id="selectByAlbum" resultMap="BaseResultMap">
        select * from xy_album_image where album_id = #{albumId}
    </select>


</mapper>
